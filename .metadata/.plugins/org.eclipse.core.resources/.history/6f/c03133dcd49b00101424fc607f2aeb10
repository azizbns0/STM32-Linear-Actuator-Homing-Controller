    APP_STATE_IDLE = 0,
    APP_STATE_HOMING_ACTIVE,
    APP_STATE_HOMING_COMPLETE,
    APP_STATE_HOMING_ERROR,
    APP_STATE_COOLDOWN
} app_state_t;

