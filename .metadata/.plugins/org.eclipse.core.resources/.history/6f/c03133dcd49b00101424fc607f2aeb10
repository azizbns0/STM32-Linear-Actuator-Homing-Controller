/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
  /* USER CODE BEGIN MX_GPIO_Init_1 */

  /* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOE_CLK_ENABLE();
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();
  __HAL_RCC_GPIOD_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOE, CS_I2C_SPI_Pin|GPIO_PIN_10|GPIO_PIN_11|GPIO_PIN_14
                          |GPIO_PIN_15, GPIO_PIN_RESET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(OTG_FS_PowerSwitchOn_GPIO_Port, OTG_FS_PowerSwitchOn_Pin, GPIO_PIN_SET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOD, LD4_Pin|LD3_Pin|LD5_Pin|LD6_Pin
                          |Audio_RST_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pins : CS_I2C_SPI_Pin PE10 PE11 PE14
                           PE15 */
  GPIO_InitStruct.Pin = CS_I2C_SPI_Pin|GPIO_PIN_10|GPIO_PIN_11|GPIO_PIN_14
                          |GPIO_PIN_15;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOE, &GPIO_InitStruct);

  /*Configure GPIO pin : OTG_FS_PowerSwitchOn_Pin */
  GPIO_InitStruct.Pin = OTG_FS_PowerSwitchOn_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(OTG_FS_PowerSwitchOn_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : PDM_OUT_Pin */
  GPIO_InitStruct.Pin = PDM_OUT_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_AF_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  GPIO_InitStruct.Alternate = GPIO_AF5_SPI2;
  HAL_GPIO_Init(PDM_OUT_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : B1_Pin */

  GPIO_InitStruct.Pin = B1_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_EVT_RISING;  // ← THIS IS WRONG!
  GPIO_InitStruct.Pull = GPIO_NOPULL;           // ← THIS IS ALSO WRONG!
  HAL_GPIO_Init(B1_GPIO_Port, &GPIO_InitStruct);
  /*Configure GPIO pin : BOOT1_Pin */
  GPIO_InitStruct.Pin = BOOT1_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(BOOT1_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : CLK_IN_Pin */
  GPIO_InitStruct.Pin = CLK_IN_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_AF_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  GPIO_InitStruct.Alternate = GPIO_AF5_SPI2;
  HAL_GPIO_Init(CLK_IN_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pins : limit_switche_2_Pin limit_switche_1_Pin OTG_FS_OverCurrent_Pin */
  GPIO_InitStruct.Pin = limit_switche_2_Pin|limit_switche_1_Pin|OTG_FS_OverCurrent_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_INPUT;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(GPIOD, &GPIO_InitStruct);

  /*Configure GPIO pins : LD4_Pin LD3_Pin LD5_Pin LD6_Pin
                           Audio_RST_Pin */
  GPIO_InitStruct.Pin = LD4_Pin|LD3_Pin|LD5_Pin|LD6_Pin
                          |Audio_RST_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOD, &GPIO_InitStruct);

  /*Configure GPIO pin : MEMS_INT2_Pin */
  GPIO_InitStruct.Pin = MEMS_INT2_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_EVT_RISING;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  HAL_GPIO_Init(MEMS_INT2_GPIO_Port, &GPIO_InitStruct);

  /* USER CODE BEGIN MX_GPIO_Init_2 */

  /* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */
static void app_init(void) {
    // Initialize homing controller
    homing_init(&app.homing_ctx);

    // Configure homing parameters
    homing_set_timeout(&app.homing_ctx, 30000);        // 30 second timeout
    homing_set_debounce_time(&app.homing_ctx, 50);     // 50ms debounce
    homing_enable_asymmetric_calculation(&app.homing_ctx, true);

    // Initialize application state
    app.app_state = APP_STATE_IDLE;
    app.state_start_time = HAL_GetTick();
    app.last_led_update = 0;
    app.auto_restart_enabled = true;

    // Initialize LEDs - all off
    set_all_leds(false);
}

static void app_update(void) {
    uint32_t now = HAL_GetTick();

    // Update homing controller (always call this)
    homing_update(&app.homing_ctx);

    // Handle application state machine
    switch (app.app_state) {
        case APP_STATE_IDLE:
            if (app.auto_restart_enabled &&
                (now - app.state_start_time) >= APP_STARTUP_DELAY_MS) {
                app_start_homing();
            }
            break;

        case APP_STATE_HOMING_ACTIVE:
            app_handle_homing_states();
            break;

        case APP_STATE_HOMING_COMPLETE:
            if ((now - app.state_start_time) >= APP_COMPLETE_DISPLAY_MS) {
                app.app_state = APP_STATE_COOLDOWN;
                app.state_start_time = now;
            }
            break;

        case APP_STATE_HOMING_ERROR:
            if ((now - app.state_start_time) >= APP_ERROR_DISPLAY_MS) {
                app.app_state = APP_STATE_COOLDOWN;
                app.state_start_time = now;
            }
            break;

        case APP_STATE_COOLDOWN:
            if ((now - app.state_start_time) >= APP_COOLDOWN_MS) {
                // Reset and restart
                homing_init(&app.homing_ctx);
                app.app_state = APP_STATE_IDLE;
                app.state_start_time = now;
            }
            break;
    }

    // Update LED display
    if ((now - app.last_led_update) >= APP_LED_UPDATE_INTERVAL_MS) {
        app_update_leds();
        app.last_led_update = now;
    }
}

static void app_handle_homing_states(void) {
    if (homing_is_complete(&app.homing_ctx)) {
        app.app_state = APP_STATE_HOMING_COMPLETE;
        app.state_start_time = HAL_GetTick();
    } else if (homing_has_error(&app.homing_ctx)) {
        app.app_state = APP_STATE_HOMING_ERROR;
        app.state_start_time = HAL_GetTick();
    }
}

static void app_update_leds(void) {
    // Clear all LEDs first
    set_all_leds(false);

    switch (app.app_state) {
        case APP_STATE_IDLE:
            // All LEDs off (already cleared)
            break;

        case APP_STATE_HOMING_ACTIVE:
            // Show current homing state
            switch (homing_get_state(&app.homing_ctx)) {
                case HOMING_STATE_MOVE_TO_LEFT:
                    HAL_GPIO_WritePin(GPIOD, LD3_Pin, GPIO_PIN_SET);  // Orange
                    break;

                case HOMING_STATE_MEASURE_LEFT_TO_RIGHT:
                    HAL_GPIO_WritePin(GPIOD, LD5_Pin, GPIO_PIN_SET);  // Red
                    break;

                case HOMING_STATE_MEASURE_RIGHT_TO_LEFT:
                    HAL_GPIO_WritePin(GPIOD, LD6_Pin, GPIO_PIN_SET);  // Blue
                    break;

                case HOMING_STATE_MOVE_TO_CENTER:
                    HAL_GPIO_WritePin(GPIOD, LD5_Pin | LD6_Pin, GPIO_PIN_SET);  // Red+Blue
                    break;

                case HOMING_STATE_COMPLETE:
                    // This should transition to APP_STATE_HOMING_COMPLETE
                    HAL_GPIO_WritePin(GPIOD, LD4_Pin, GPIO_PIN_SET);  // Green
                    break;

                case HOMING_STATE_ERROR:
                    // This should transition to APP_STATE_HOMING_ERROR
                    set_all_leds(true);  // All LEDs for error
                    break;

                default:
                    HAL_GPIO_WritePin(GPIOD, LD3_Pin, GPIO_PIN_SET);  // Orange for unknown
                    break;
            }
            break;

        case APP_STATE_HOMING_COMPLETE:
            // Success - solid green
            HAL_GPIO_WritePin(GPIOD, LD4_Pin, GPIO_PIN_SET);
            break;

        case APP_STATE_HOMING_ERROR:
            // Error - flashing all LEDs
            {
                static uint32_t flash_timer = 0;
                static bool flash_state = false;
                uint32_t now = HAL_GetTick();

                if ((now - flash_timer) >= 300) {  // Flash every 300ms
                    flash_state = !flash_state;
                    set_all_leds(flash_state);
                    flash_timer = now;
                }
            }
            break;

        case APP_STATE_COOLDOWN:
            // Dim orange during cooldown
            HAL_GPIO_WritePin(GPIOD, LD3_Pin, GPIO_PIN_SET);
            break;
    }
}

static void set_all_leds(bool state) {
    GPIO_PinState pin_state = state ? GPIO_PIN_SET : GPIO_PIN_RESET;
    HAL_GPIO_WritePin(GPIOD, LD3_Pin | LD4_Pin | LD5_Pin | LD6_Pin, pin_state);
}

static void app_start_homing(void) {
    homing_start(&app.homing_ctx);
    app.app_state = APP_STATE_HOMING_ACTIVE;
    app.state_start_time = HAL_GetTick();
}

/* USER CODE END 4 */

/**
  * @brief  This function is executed in case of error occurrence.
  * @retval None
  */
void Error_Handler(void)
{
  /* USER CODE BEGIN Error_Handler_Debug */
  /* User can add his own implementation to report the HAL error return state */
  __disable_irq();
  while (1) {
      // Error state - flash all LEDs rapidly
      set_all_leds(true);
      HAL_Delay(100);
      set_all_leds(false);
      HAL_Delay(100);
  }
  /* USER CODE END Error_Handler_Debug */
}
